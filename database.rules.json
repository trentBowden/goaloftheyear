{
  "rules": {
    "votes": {
      "women": {
        ".read": true,
        ".write": true,
        "$userId": {
          ".write": true,
          ".validate": "newData.hasChildren(['userId', 'goalId', 'category', 'timestamp']) && newData.child('category').val() === 'women'"
        }
      },
      "men": {
        ".read": true,
        ".write": true,
        "$userId": {
          ".write": true,
          ".validate": "newData.hasChildren(['userId', 'goalId', 'category', 'timestamp']) && newData.child('category').val() === 'men'"
        }
      }
    }
  }
}
